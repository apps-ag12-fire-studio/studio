rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Permite uploads para fotos de contratos originais (antes da assinatura)
    match /original_contracts/{allPaths=**} {
      allow read, write: if true;
    }

    // Permite uploads para documentos do comprador
    match /buyer_documents/{allPaths=**} {
      allow read, write: if true;
    }

    // Permite uploads para fotos de contratos assinados
    match /signed_contracts/{allPaths=**} {
      allow read, write: if true;
    }

    // IMPORTANTE: Qualquer outro caminho não especificado acima será negado por padrão.
  }
}
